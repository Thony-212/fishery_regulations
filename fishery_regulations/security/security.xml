<odoo>
    <record model="ir.module.category" id="module_category_fishery">
            <field name="name">Normativa Pesquera</field>
            <field name="description">Gesti√≥n de permisos para normativas</field>
            <field name="sequence">10</field>
    </record>

    <record id="group_fishery_readonly" model="res.groups">
            <field name="name">Consulta (Solo Lectura)</field>
            <field name="category_id" ref="module_category_fishery"/>
    </record>

    <record id="group_fishery_user" model="res.groups">
            <field name="name">Usuario (Editor)</field>
            <field name="category_id" ref="module_category_fishery"/>
            <field name="implied_ids" eval="[(4, ref('group_fishery_readonly'))]"/>
    </record>

    <record id="group_fishery_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_fishery"/>
            <field name="implied_ids" eval="[(4, ref('group_fishery_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>